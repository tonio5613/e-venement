<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controltic_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >



<LinearLayout
    android:id="@+id/controltic_grouptext"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dip"
    >

    <TextView
        android:id="@+id/controltic_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:text=""
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/controltic_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text=""
        android:textSize="16sp"
        android:typeface="monospace"/>
    <TextView
        android:id="@+id/controltic_erreurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:typeface="monospace"/>
    <TextView
        android:id="@+id/controltic_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:typeface="monospace"/>
    <TextView
        android:id="@+id/controltic_jauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:typeface="monospace"/>
    <TextView
        android:id="@+id/controltic_manifestation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:typeface="normal"/>

</LinearLayout>
    <ImageView
        android:id="@+id/controltic_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        />

    </RelativeLayout>